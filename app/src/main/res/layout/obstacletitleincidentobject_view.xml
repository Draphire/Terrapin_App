<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="3dp"
              android:alpha="20"
              android:background="@color/md_grey_300"
              android:paddingBottom="3dp"
              android:paddingLeft="2dp"
              android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#EFEBE9"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/arrow_expand_imageview2"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="#EFEBE9"
            android:fitsSystemWindows="false"
            android:paddingLeft="3dp"
            android:paddingRight="4dp"
            android:src="@drawable/roadblock"
            android:tint="@color/md_grey_700"/>

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/md_grey_300"
            android:minWidth="35dp"
            android:paddingRight="2dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#EFEBE9"
            android:orientation="horizontal"
            android:padding="@dimen/standard_material_padding">

            <TextView
                android:id="@+id/recipe_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/standard_text_size"
                android:textStyle="bold"

                />

            <ImageView
                android:id="@+id/arrow_expand_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_arrow_down"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>